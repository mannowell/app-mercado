{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["node", "jsdom", "vitest/globals"],
    "composite": true,
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
